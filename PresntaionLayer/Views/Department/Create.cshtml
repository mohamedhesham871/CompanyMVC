@model CreateDepartmentDto
@{
    ViewData["Title"] = "Create";
}

<div class="row justify-content-center align-content-center mt-3">
    <h1 class="col-8 my-4">Create Department</h1>

    <form class="col-8"  mehtod="Post" asp-controller="Department" asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>@* for any Erro*@
        <div class="form-group mb-3">
            @* <label class="form-label" for="Code"></label> *@
            @* <input id="Code" name="Code" type="text" /> *@
            <label class="form-label" asp-for="Code"></label>
            <input asp-for="Code" class="form-control" />
            <span asp-validation-for="Code" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label class="form-label" asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label class="form-label" asp-for="Description"></label>
            <textarea class="form-control" asp-for="Description"></textarea>
        </div>
        <div class="form-group mb-3">
            <label class="form-label" asp-for="CreatedDate"></label>
            <input type="date" asp-for="CreatedDate" class="form-control" />
        </div>
        <div class="mt-4 m-auto">
            <input class="btn btn-primary" type="submit" value="Create" />
            <a asp-controller="Department" asp-Controller ="Index" class="btn btn-outline-dark">Back to list</a>
        </div>
    </form>
</div>

@section MYScripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

